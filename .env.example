# Example environment variables for Rangers Bakery web app
# Copy this file to `.env.local` (e.g. `cp .env.example .env.local`) and fill in the values.
# Do not commit your filled-in `.env.local` back to version control.

# Supabase configuration
NEXT_PUBLIC_SUPABASE_URL="https://<your-project>.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="<your-supabase-anon-key>"
SUPABASE_URL="https://<your-project>.supabase.co"
SUPABASE_ANON_KEY="<your-supabase-anon-key>"
SUPABASE_SERVICE_ROLE_KEY="<your-supabase-service-role-key>"
SUPABASE_DB_URL="postgresql://<user>:<password>@<host>:<port>/<database>"

# Square configuration
SQUARE_ENV="sandbox" # or "production"
SQUARE_LOCATION_ID="<your-square-location-id>"
SQUARE_APPLICATION_ID="<your-square-application-id>"
SQUARE_ACCESS_TOKEN="<your-square-access-token>"
NEXT_PUBLIC_SQUARE_LOCATION_ID="<your-square-location-id>"
NEXT_PUBLIC_SQUARE_APPLICATION_ID="<your-square-application-id>"
NEXT_PUBLIC_SQUARE_ENV="sandbox" # or "production"

# CORS configuration
ALLOWED_ORIGIN="http://localhost:3000"

# Email notifications
NEXT_PUBLIC_BUSINESS_NOTIFICATION_EMAIL="notifications@example.com"
NEXT_PUBLIC_EMPLOYEE_NOTIFICATION_EMAILS="alerts@example.com,ops@example.com"

# Supabase Edge Function (send-notification-email)
# Set these via `supabase secrets set` in production deployments.
PUBLIC_APP_BASE_URL="https://app.example.com"
RESEND_API_KEY="<your-resend-api-key>"
